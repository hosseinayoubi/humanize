############################################
# App
############################################

NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development


############################################
# Supabase
############################################

# Project URL (from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co

# Public anon key (safe for client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key


############################################
# Database (Prisma + Supabase)
############################################

# ✅ Runtime connection (Vercel / Serverless)
# MUST use Pooler + pgBouncer options
DATABASE_URL=postgresql://postgres.PROJECT_REF:YOUR_DB_PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require

# ⚠️ Direct connection (ONLY for migrations)
# ❌ Do NOT use in runtime
# ❌ Do NOT use pooler user here
DIRECT_URL=postgresql://postgres:YOUR_DB_PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres?sslmode=require


############################################
# Anthropic Claude (AI)
############################################

# API key from Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# ✅ Single source of truth for model
# Used everywhere in the codebase
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929


############################################
# Optional / Future
############################################

# Uncomment only if needed later
# LOG_LEVEL=debug
# ENABLE_DEBUG_ROUTES=true
