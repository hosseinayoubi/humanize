############################################
# App (Production)
############################################

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://YOUR_DOMAIN


############################################
# Supabase (Production)
############################################

# Project URL (from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co

# Public anon key (safe for client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key


############################################
# Database (Prisma + Supabase)
############################################

# ✅ Runtime connection (Serverless / Vercel)
# MUST use Supabase Pooler (IPv4 compatible)
# REQUIRED options for Prisma:
# - pgbouncer=true
# - connection_limit=1
# - sslmode=require
DATABASE_URL=postgresql://postgres.PROJECT_REF:YOUR_DB_PASSWORD@aws-1-eu-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require

# ⚠️ Direct connection (ONLY for Prisma migrations in CI)
# DO NOT use this in runtime
DIRECT_URL=postgresql://postgres:YOUR_DB_PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres?sslmode=require


############################################
# Anthropic Claude (Production)
############################################

# API key from Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# ✅ Single source of truth for model
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929


############################################
# Optional / Diagnostics (Production-safe)
############################################

# Enable only when debugging production issues
# LOG_LEVEL=info
# ENABLE_DEBUG_ROUTES=false
